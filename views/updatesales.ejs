<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update sales</title>
</head>
<body>
    <%- include('home.ejs')
    %>
    <% var error%>
    <div class="wrapper">
        <div class="content-wrapper">
			
            <section class="content-header">
                <h1>Supermarket Details</h1>
            </section>

            <section class="content">
                <div class="container-fluid">
                    <div class="col-md-5">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Update sales</h3>
                            </div>

                            <div class="card-body">
                                <form action="/update_form_sales" method="POST">
                                    <input type="text" name="title" style="display: none;">
                                    <div class="form-group titlediv" style="font-weight: bold;">
                                        
                                    </div>
                                    <div class="form-group form-inline">
                                        <label for="price">Price  </label>
                                        <input type="text" class="form-control col-sm-4" id="price" name="price" placeholder="Enter price" style="margin-left: 3px;">
                                    </div>
                                    <div class="form-group form-inline">
                                        <label for="quan">Quantity  </label>
                                        <input type="text" class="form-control col-sm-4" id="quan" name= "quantity" placeholder="Enter quantity" style="margin-left: 3px;">
                                    </div>
                                    <div class="form-group form-inline">
                                        <label for="rat">Date  </label>
                                        <input type="text" class="form-control col-sm-4" id="date" name="date" placeholder="Enter date" style="margin-left: 3px;">
                                    </div>
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                    <button type="reset" class="btn btn-secondary float-right">Cancel</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
    <script>
        var loc=window.location.href;
        var s1=loc.split("=")[1];
        var tit=s1.replaceAll("%20"," ");
        console.log(tit);
        document.getElementsByClassName("titlediv")[0].innerHTML="Title is "+tit+" . Please enter below values to update";
        document.getElementsByName("title")[0].value=tit;
    </script>
</body>
</html>