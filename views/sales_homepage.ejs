<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>D-Mart</title>
</head>
<body>
    <%- include('home.ejs')
    %>
    <div class="wrapper">
        <div class="content-wrapper">
			
            <section class="content-header">
                <h1>Supermarket Details</h1>
            </section>
            <section class="content">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Sales Details</h3>
        
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i></button>
                            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                            <i class="fas fa-times"></i></button>
                        </div>
                    </div>
                    <div class="card-body table-responsive" style="height:400px">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th style="width:11%">Purchase Date</th>
                                    <th style="width:11%">Title</th>
                                    <th style="width:11%">Unit Price</th>
                                    <th style="width:11%">Quantity</th>
                                    <th style="width:11%">Total Sales(in Rs)</th>
                                    <th style="width: 20%"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(var i=0; i<data.length; i++) { %>
                                    <tr>
                                      <td><%= data[i].date%></td>
                                      <td><%= data[i].title%></td>
                                      <td><%= data[i].price%></td>
                                      <td><%= data[i].quantity%></td>
                                      <td>
                                        <%=  Number.parseFloat(data[i].quantity*data[i].price).toFixed(2)%>
                                      </td>
                                      <td class="text-right form-inline">

                                        <a class="btn btn-info btn-sm" href="/updatesales?title=<%= data[i].title%>""><i class="fas fa-pencil-alt"></i> Edit</a>
                                        <form method="POST" action="/delete_sales">
                                            <input type="text" name="title" value="<%= data[i].title%>" style="display: none;">
                                            <input type="text" name="date" value="<%= data[i].date%>" style="display: none;">
                                            <button class="btn" type="submit"><a class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Delete</a></button>
                                        </form>
                                    
                                        </td>
                                    </tr>
                                <%}%>
                            </tbody>
                        </table>
                    </div>
                </div>
                <form action="/addsales">
                    <button class="btn btn-primary btn-sm"><i class="fas fa-plus"></i> Add Sales</button>
                    <button class="btn btn-primary btn-small" style="float: right;" onclick="window.print();return false;"><i class="fas fa-print"></i> Print</button>
                </form>
            </section>
        </div>
    </div>
    <script>
       
    </script>
</body>
</html>